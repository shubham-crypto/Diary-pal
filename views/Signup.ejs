<%- include("partials/header") -%>
<div class="register">
    <div class="reg">
        <h1>Sign up</h1>
        <div class="reg-in">
            <form class="form-signin" action="/Signup" method="post">
                <input  class="form-control" type="text" name="username" placeholder="Email address" required="" autofocus="" />
                <input   class="form-control" type="password" name="password"  placeholder="Password" required=""/>
                <input   class="form-control" type="password" name="confirm-password"  placeholder="Confirm Password" required=""/>
                <button class="acc-btn , reg-btn" name="account" value="Login" type="Submit">Register</button> 
            </form>
            <div class="reg-auth">
                <div class="reg-card">
                    <a class="btn-auth" href="/auth/google" role="button">
                        <img class="google-img" src="google.png">
                         Sign Up with google
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("partials/footer") -%>